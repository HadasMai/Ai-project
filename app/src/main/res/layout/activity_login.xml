<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/watercolor_orange"
                tools:context=".LoginActivity">

    <!-- כותרת לאימייל -->

    <!-- שדה אימייל -->

    <!-- כותרת לסיסמא -->

    <!-- שדה סיסמא -->

    <!-- כפתור התחברות -->
    <TextView
            android:id="@+id/emailLabel"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="אימייל:"
            android:fontFamily="@font/dgl_hollywood"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="285dp"
            android:layout_alignTop="@id/emailEt"
            android:textSize="18sp"
            android:textColor="@android:color/black" android:layout_marginTop="15dp"/>
    <EditText
            android:id="@+id/emailEt"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="אימייל"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="6dp"
            android:layout_above="@+id/passwordEt"
            android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
            android:layout_marginStart="98dp"/>
    <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="סיסמא:"
            android:fontFamily="@font/dgl_hollywood"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="285dp"
            android:layout_alignTop="@id/passwordEt"
            android:textSize="18sp"
            android:textColor="@android:color/black" android:layout_marginTop="17dp"/>
    <EditText
            android:id="@+id/passwordEt"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:hint="סיסמא"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="62dp"
            android:layout_above="@+id/loginBtn"
            android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
            android:layout_marginStart="103dp"/>
    <Button
            android:id="@+id/loginBtn"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:text="להתחבר"
            android:fontFamily="@font/dgl_hollywood"
            android:backgroundTint="#FFA500"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:layout_marginBottom="326dp"
            android:layout_marginStart="113dp"
            android:layout_marginEnd="108dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

    <!-- תמונה -->
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            app:srcCompat="@drawable/logo_boy_girl"
            android:id="@+id/imageView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="268dp"
            android:layout_marginTop="9dp"
            android:layout_alignParentTop="true"/>

    <!-- כותרת כללית -->
    <TextView
            android:text="עוד רגע מתחילים! רק צריך למלא את הפרטים:"
            android:fontFamily="@font/dgl_hollywood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_above="@+id/emailEt"
            android:layout_marginBottom="15dp"/>

</RelativeLayout>
