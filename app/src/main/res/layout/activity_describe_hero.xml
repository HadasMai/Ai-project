<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/watercolor_orange"
        android:padding="16dp">

    <Button
            android:id="@+id/submitBtn"
            android:layout_width="172dp"
            android:layout_height="58dp"
            android:text="המשך"
            android:backgroundTint="#FFA500"
            android:importantForAccessibility="yes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="236dp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/skinColorEt"/>
    <EditText
            android:id="@+id/skinColorEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="צבע עור"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toBottomOf="@id/eyeColorEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:id="@+id/ageEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="גיל"
            android:inputType="number"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:id="@+id/hairColorEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="צבע שיער"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toBottomOf="@id/ageEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Spinner
            android:id="@+id/hairTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/hair_types"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toBottomOf="@id/hairColorEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:id="@+id/eyeColorEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="צבע עיניים"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toBottomOf="@id/hairTypeSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>