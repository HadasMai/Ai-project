<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="@drawable/watercolor_orange">

    <TextView
            android:id="@+id/booksHistoryTitle"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:text="היסטורית הספרים שלי"
            android:fontFamily="@font/dgl_hollywood"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp"
            android:layout_alignParentTop="true" android:layout_marginTop="161dp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp" android:layout_alignParentStart="true" android:layout_marginStart="45dp"/>
    <ImageView
            android:layout_width="136dp"
            android:layout_height="135dp" app:srcCompat="@drawable/logo_boy_girl" android:id="@+id/imageView6"
            android:layout_alignParentEnd="true" android:layout_marginEnd="27dp" android:layout_alignParentStart="true"
            android:layout_marginStart="232dp" android:layout_marginTop="13dp" android:layout_alignParentTop="true"
    />
    <ListView
            android:id="@+id/booksListView"
            android:layout_width="wrap_content"
            android:layout_height="371dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" android:layout_marginTop="30dp"
            android:layout_below="@+id/booksHistoryTitle"/>

</RelativeLayout>