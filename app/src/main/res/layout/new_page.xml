<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/watercolor_orange"
        tools:context=".NewPage">

    <ImageView
            android:layout_width="84dp"
            android:layout_height="62dp" app:srcCompat="@drawable/logo_boy_girl" android:id="@+id/imageView7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.951" app:layout_constraintBottom_toTopOf="@+id/editTextText2"
            app:layout_constraintVertical_bias="0.631"/>
    <EditText
            android:id="@+id/editTextText2"
            android:layout_width="316dp"
            android:layout_height="154dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="textMultiLine"
            android:hint="הטקסט לעמוד"
            android:fontFamily="@font/dgl_hollywood"
            android:background="@drawable/edit_text_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5" android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.492"/>
    <Button
            android:id="@+id/button"
            android:layout_width="153dp"
            android:layout_height="42dp"
            android:text="צור תמונה"
            android:fontFamily="@font/dgl_hollywood"
            app:layout_constraintTop_toBottomOf="@+id/editTextText2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#FFA500"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="40dp"/>

    <Button
            android:id="@+id/reloadButton"
            android:layout_width="153dp"
            android:layout_height="40dp"
            android:text="צור דף חדש"
            android:fontFamily="@font/dgl_hollywood"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#FFA500"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="12dp" app:layout_constraintBottom_toTopOf="@+id/EndButton"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="339dp"
            android:layout_height="291dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Generated Image"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_corners"

    />
    <Button
            android:id="@+id/buttonPrevPage"
            android:layout_width="70dp"
            android:layout_height="52dp"
            android:text="→"
            android:fontFamily="@font/dgl_hollywood"
            android:textSize="25sp"
            android:textStyle="bold"
            android:backgroundTint="#FFA500"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"/>
    <Button
            android:id="@+id/buttonNextPage"
            android:layout_width="70dp"
            android:layout_height="52dp"
            android:text="←"
            android:fontFamily="@font/dgl_hollywood"
            android:textSize="25sp"
            android:backgroundTint="#FFA500"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.894"/>
    <Button
            android:id="@+id/EndButton"
            android:layout_width="98dp"
            android:layout_height="48dp"
            android:text="סיום "
            android:fontFamily="@font/dgl_hollywood"
            android:backgroundTint="#F07E5A"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.619" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
    <Spinner
            android:id="@+id/styleSpinner"
            android:layout_width="136dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextText2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.814"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="סגנון התמונה:"
            android:layout_width="125dp"
            android:layout_height="21dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextText2"
            android:fontFamily="@font/dgl_hollywood"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintHorizontal_bias="0.193"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>