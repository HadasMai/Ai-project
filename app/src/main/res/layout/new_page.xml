<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/watercolor_orange"
        tools:context=".NewPage">

    <EditText
            android:id="@+id/editTextText2"
            android:layout_width="309dp"
            android:layout_height="166dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="textMultiLine"
            android:hint="הכנס טקסט"
            android:background="@drawable/edit_text_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5" android:layout_marginTop="68dp"/>
    <Button
            android:id="@+id/button"
            android:layout_width="116dp"
            android:layout_height="48dp"
            android:text="צור תמונות"
            app:layout_constraintTop_toBottomOf="@+id/editTextText2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#FFA500"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="40dp"/>
    <Button
            android:id="@+id/reloadButton"
            android:layout_width="179dp"
            android:layout_height="48dp"
            android:text="צור דף חדש"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#FFA500"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/buttonNextPage"/>

    <!-- כפתור חץ שמאלי -->

    <!-- כפתור חץ ימני -->
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="326dp"
            android:layout_height="261dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Generated Image"
            app:layout_constraintHorizontal_bias="0.494"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginTop="8dp"/>
    <Button
            android:id="@+id/buttonPrevPage"
            android:layout_width="70dp"
            android:layout_height="52dp"
            android:text="→"
            android:textSize="25sp"
            android:backgroundTint="#FFA500"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/reloadButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.512"/>
    <Button
            android:id="@+id/buttonNextPage"
            android:layout_width="70dp"
            android:layout_height="52dp"
            android:text="←"
            android:textSize="25sp"
            android:backgroundTint="#FFA500"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="16dp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintStart_toEndOf="@+id/buttonPrevPage" app:layout_constraintHorizontal_bias="0.99"/>

    <Button
            android:id="@+id/EndButton"
            android:layout_width="98dp"
            android:layout_height="48dp"
            android:text="סיום "
            android:backgroundTint="#F07E5A"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reloadButton"
            app:layout_constraintEnd_toStartOf="@+id/buttonNextPage"
            app:layout_constraintStart_toEndOf="@+id/buttonPrevPage" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintVertical_bias="0.275"/>

</androidx.constraintlayout.widget.ConstraintLayout>