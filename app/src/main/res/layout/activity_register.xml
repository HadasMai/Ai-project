<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/watercolor_orange"
                tools:context=".RegisterActivity">

    <EditText
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם משתמש"
            android:padding="10dp" android:layout_marginStart="20dp"
            android:layout_above="@+id/emailEt" android:layout_marginEnd="20dp" android:layout_marginBottom="20dp"
            android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
    />
    <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="אימייל"
            android:inputType="textEmailAddress"
            android:padding="10dp" android:layout_marginBottom="32dp"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_above="@+id/passwordEt"
            android:layout_alignParentEnd="true" android:layout_alignParentStart="true"/>
    <EditText
            android:id="@+id/passwordEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="בחר סיסמא"
            android:inputType="textPassword"
            android:padding="10dp" android:layout_marginBottom="71dp"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_above="@+id/registerBtn"/>
    <Button
            android:id="@+id/registerBtn"
            android:layout_width="129dp"
            android:layout_height="63dp"
            android:text="רשום אותי"
            android:textColor="@android:color/white"
            android:backgroundTint="#FFA500"
            android:padding="10dp" android:layout_marginStart="139dp"
            android:layout_marginEnd="141dp" android:layout_marginBottom="322dp"
            android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>
    <ImageView
            android:layout_width="87dp"
            android:layout_height="77dp" app:srcCompat="@drawable/logo_boy_girl" android:id="@+id/imageView3"
            android:layout_alignParentStart="true" android:layout_marginStart="300dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp" android:layout_above="@+id/nameEt" android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp" android:layout_alignParentTop="true"/>

</RelativeLayout>