<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HeroStoryQuestions">

    <TextView
            android:id="@+id/textViewHeroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מה שם גיבור הסיפור שלך?"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.658"/>

    <EditText
            android:id="@+id/editTextHeroName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="הכנס שם גיבור"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewHeroName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHorizontal_bias="0.621"
            android:minHeight="48dp"/>

    <Button
            android:id="@+id/button_child"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:text="ילד"
            android:backgroundTint="#F07E5A"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toBottomOf="@+id/editTextHeroName"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_girl"/>

    <Button
            android:id="@+id/button_girl"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:text="ילדה"
            android:backgroundTint="#F07E5A"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toBottomOf="@+id/editTextHeroName"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/button_child"
            app:layout_constraintEnd_toStartOf="@+id/button_man"/>

    <Button
            android:id="@+id/button_man"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:text="איש"
            android:backgroundTint="#F07E5A"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toBottomOf="@+id/editTextHeroName"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/button_girl"
            app:layout_constraintEnd_toStartOf="@+id/button_woman"/>

    <Button
            android:id="@+id/button_woman"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:text="אישה"
            android:backgroundTint="#F07E5A"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toBottomOf="@+id/editTextHeroName"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/button_man"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/button_animal"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:text="חיה"
            android:backgroundTint="#F07E5A"
            app:layout_constraintTop_toBottomOf="@+id/button_woman"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/editTextAnimalType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="הכנס סוג חיה"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_animal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8"/>

    <Button
            android:id="@+id/button_describe_hero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תאר את גיבור הסיפור"
            android:backgroundTint="#FFA500"
            android:layout_marginTop="148dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextAnimalType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"/>
</androidx.constraintlayout.widget.ConstraintLayout>
