<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/man" />
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#80FFA500" /> <!-- 50% transparent orange -->
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="#FFFFA500" android:width="2dp" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:drawable="@drawable/man" />
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="#F02617" android:width="4dp" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/man" />
        </layer-list>
    </item>
</selector>